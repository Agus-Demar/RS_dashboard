# RS Dashboard Environment Configuration
# Copy this file to .env and customize as needed
# Command: cp env.example .env

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database path (default: data/rs_dashboard.db)
# DATABASE_URL=sqlite:///data/rs_dashboard.db

# For PostgreSQL (optional):
# DATABASE_URL=postgresql://user:password@localhost:5432/rs_dashboard

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, production
APP_ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (shows SQL queries, etc.)
DEBUG=true

# =============================================================================
# Scheduler Settings
# =============================================================================

# Enable/disable automatic scheduled jobs
SCHEDULER_ENABLED=true

# Timezone for scheduler (default: America/New_York)
SCHEDULER_TIMEZONE=America/New_York

# =============================================================================
# RS Calculation Settings
# =============================================================================

# SMA period for Mansfield RS (weeks)
RS_SMA_PERIOD_WEEKS=52

# Benchmark ticker for relative strength calculation
BENCHMARK_TICKER=SPY

# Years of price history to fetch
PRICE_HISTORY_YEARS=2

# =============================================================================
# Dashboard Settings
# =============================================================================

# Default weeks to display in heatmap
DEFAULT_WEEKS_DISPLAY=17

# Maximum weeks available in slider
MAX_WEEKS_DISPLAY=52

# =============================================================================
# Rate Limiting
# =============================================================================

# yfinance requests per hour (be conservative)
YFINANCE_REQUESTS_PER_HOUR=2000

